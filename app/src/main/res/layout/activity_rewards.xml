<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RewardsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/maxblur_background"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/rewardsHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:src="@drawable/app_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WALLET"
                android:textColor="@color/primary_blue"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/currentCoins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:layout_below="@+id/rewardsHeading"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/gray_background">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/coin"/>

            <TextView
                android:id="@+id/coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You have : 0 coins"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ad1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_above="@+id/ad2"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/reward_background"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ad1Coin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/coin"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/ad1text"
                android:text="200 Coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/ad1Coin"
                android:textSize="20sp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/ad1play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/play_button"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ad2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_above="@+id/ad3"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/reward_background"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ad2Coin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/coin"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/ad2text"
                android:text="200 Coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/ad2Coin"
                android:textSize="20sp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/ad2play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/play_button"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ad3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/reward_background"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ad3Coin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/coin"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/ad3text"
                android:text="200 Coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/ad3Coin"
                android:textSize="20sp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/ad3play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/play_button"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>